    "reading",
    "ebook",
    "epub",
    "editor",
    "publishing",
    "pdf"
  ],
  "browserslist": [
    ">0.3%",
    "defaults",
    "supports es6-module",
    "maintained node versions"
  ],
  "stylelint": {
    "extends": "./node_modules/js-styleguide/linting/scss/.stylelintrc.yml"
  },
  "exports": "./build/backend/index.js",
  "types": "build/backend/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">18"
  },
  "scripts": {
    "clean": "rimraf build .nyc_output coverage dist resources/js resources/views resources/serviceworker documentation resources/css",
    "typecheck:frontend": "tsc --project frontend/tsconfig.json",
    "typecheck:backend": "tsc --project backend/tsconfig.json",
    "typecheck:frontendtest": "tsc --project frontend/tsconfig.test.json",
    "typecheck:backendtest": "tsc --project backend/tsconfig.test.json",
    "typecheck:embed": "tsc --project embed/tsconfig.json",
    "typecheck:serviceworker": "tsc --project serviceworker/tsconfig.json",
    "typecheck": "yarn typecheck:frontend && yarn typecheck:frontendtest && yarn typecheck:backend && yarn typecheck:backendtest && yarn typecheck:embed && yarn typecheck:serviceworker",
    "build:backend": "tsc --project backend/tsconfig.build.json",
    "build:frontend": "webpack --mode development --config frontend/webpack.js",
    "build:embed": "webpack --mode development --config embed/webpack.js",
    "build:serviceworker": "webpack --mode development --config serviceworker/webpack.js",
    "build": "yarn build:backend && yarn build:embed && yarn build:frontend && yarn build:serviceworker",
    "build:backendproduction": "cross-env ENV=PROD tsc --project backend/tsconfig.build.json",
    "build:frontendproduction": "cross-env ENV=PROD webpack --mode production --config frontend/webpack.js",
    "build:embedproduction": "cross-env ENV=PROD webpack --mode production --config embed/webpack.js",
    "build:serviceworkerproduction": "cross-env ENV=PROD webpack --mode production --config serviceworker/webpack.js",
    "build:production": "yarn build:backendproduction && yarn build:frontendproduction && yarn build:embedproduction && yarn build:serviceworkerproduction",
    "coverage": "yarn coverage:backend && yarn coverage:frontend",
    "coverage:backend": "cross-env ENV=COV TS_NODE_FILES=true TS_NODE_PROJECT=\"backend/tsconfig.test.json\" c8 -n \"backend/src/**/*\" mocha -c \"backend/.mocharc.yml\" && c8 report",
    "coverage:frontend": "cross-env TS_NODE_FILES=true TS_NODE_PROJECT=\"frontend/tsconfig.test.json\" c8 --no-clean -n \"frontend/src/**/*\" mocha -c \"frontend/.mocharc.yml\" && c8 report",
    "lint-prettier": "prettier --config node_modules/js-styleguide/linting/.prettierrc.yml --check \"{backend,chart,embed,frontend,serviceworker}/**/*.{js,tsx,ts,tsx,json,html,yml}\"",
    "lint-prettier-fix": "prettier --config node_modules/js-styleguide/linting/.prettierrc.yml --write \"{backend,chart,embed,frontend,serviceworker}/**/*.{js,tsx,ts,tsx,json,html,yml}\"",
    "lint-eslint-backend": "eslint -c ./backend/eslint.config.js \"backend/**/*.{tsx,ts}\"",
    "lint-eslint-embed": "eslint -c ./embed/eslint.config.js \"embed/**/*.{tsx,ts}\"",
    "lint-eslint-frontend": "eslint -c ./frontend/eslint.config.js \"frontend/**/*.{tsx,ts}\"",
    "lint-eslint-serviceworker": "eslint -c ./serviceworker/eslint.config.js \"serviceworker/**/*.{tsx,ts}\"",
    "lint-eslint": "yarn lint-eslint-backend && yarn lint-eslint-frontend && yarn lint-eslint-embed && yarn lint-eslint-serviceworker",
    "lint-eslint-backend-fix": "eslint -c ./backend/eslint.config.js \"backend/**/*.{tsx,ts}\" --fix",
    "lint-eslint-embed-fix": "eslint -c ./embed/eslint.config.js \"embed/**/*.{tsx,ts}\" --fix",
    "lint-eslint-frontend-fix": "eslint -c ./frontend/eslint.config.js \"frontend/**/*.{tsx,ts}\" --fix",
    "lint-eslint-serviceworker-fix": "eslint -c ./serviceworker/eslint.config.js \"serviceworker/**/*.{tsx,ts}\" --fix",
    "lint-eslint-fix": "yarn lint-eslint-backend-fix && yarn lint-eslint-frontend-fix && yarn lint-eslint-embed-fix && yarn lint-eslint-serviceworker-fix",
    "lint-stylelint": "stylelint ./**/*.scss",
    "lint-stylelint-fix": "stylelint ./**/*.scss --fix",
    "lint": "yarn lint-prettier && yarn lint-eslint && yarn lint-stylelint",
    "lint-fix": "yarn lint-prettier-fix && yarn lint-eslint-fix && yarn lint-stylelint-fix",
    "test": "yarn typecheck && yarn coverage && yarn lint",
    "start": "node --trace-warnings backend/index",
    "start:local": "cross-env ENV=LOCAL NODE_OPTIONS='--inspect --trace-deprecation --trace-warnings' node --import tsx/esm backend/src/index",
    "watch": "webpack --watch --mode development --config frontend/webpack.js",
    "watch:embed": "cross-env ENV=LOCAL webpack --mode development --watch --config embed/webpack.js"
  },
  "c8": {
    "exclude": [
      "**/*.d.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "instrument": true,
    "all": true
  },
